{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build kernel",
            "command": "/usr/bin/make",
            "args": [
                "kernel",
                "fastdisk",
                "2>&1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Clean kernel",
            "command": "/usr/bin/ninja",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Kernel/build"
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Launch Qemu",
            "command": "cmd.exe",
            "args": [
                "/c",
                "Z:\\${workspaceFolder}\\Scripts\\run_bios.bat"
            ],
            "dependsOn": "Build kernel",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}